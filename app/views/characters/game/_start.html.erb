<div id="game-not-ready" <% if game.is_ready? %>style="display:none;"<% end %>>
  <span class="label primary">Waiting for more characters to join</span>
</div>
<div id="game-ready" <% if ! game.is_ready? %>style="display:none;"<% end %>>
  <% if game.is_owner? character %>
    <button type="submit" class="button success">Start Game</button>
  <% else %>
    <span# class="label success">Waiting for host to start</span>
  <% end %>
</div>
